<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/perfil_Imagen"
        android:layout_width="137dp"
        android:layout_height="118dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/nombre_relativo"
        android:layout_width="231dp"
        android:layout_height="37dp"
        android:layout_below="@id/perfil_Imagen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/correo_relativo"
        android:layout_width="231dp"
        android:layout_height="37dp"
        android:layout_below="@id/nombre_relativo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/mensaje_relativo"
        android:layout_width="231dp"
        android:layout_height="37dp"
        android:layout_below="@id/correo_relativo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


    <LinearLayout
        android:layout_width="119dp"
        android:layout_height="68dp"
        android:layout_alignEnd="@+id/nombre_relativo"
        android:layout_alignBottom="@+id/perfil_Imagen"
        android:layout_marginEnd="-78dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:padding="15dp" />


    </LinearLayout>


</RelativeLayout>

